<Window x:Class="Угрюмова_практическая_6_ТРПО.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Угрюмова_практическая_6_ТРПО"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="5, 15" />
            <Setter Property="Background" Value="YellowGreen" />
        </Style>
    </Window.Resources>
    <Grid>
        
        <StackPanel>
            <Label Content="Привязка данных" FontSize="22" FontWeight="Bold"
HorizontalAlignment="Center" />
            <Button Content="Связь элементов" 
                    Click="Button_Click1"/>
            <Button Content="Привязка ресурсов"
                    Click="Button_Click2"/>
            <Button Content="Использование DataContext"
                    Click="Button_Click3"/>
            <Button Content="Выход" Margin="5,110,0,0" />
        </StackPanel>
    </Grid>
</Window>
